generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Order {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  restaurantId String
  orderId      String
  userId       String

  items  OrderedItem[]
  status OrderStatus[]
}

model OrderedItem {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  prettyName String
  shortName  String
  quantity   Int

  kitchenOrder   Order  @relation(fields: [kitchenOrderId], references: [id])
  kitchenOrderId String
}`

enum Status {
  IN_PROGRESS
  CANCELLED
  COMPLETED
}

model OrderStatus {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())

  status Status

  kitchenOrder   Order  @relation(fields: [kitchenOrderId], references: [id])
  kitchenOrderId String
}
